<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SecondActivity">

    <com.shr.interview.SView
            android:layout_width="50dp"
            android:layout_height="100dp"/>

    <Button android:layout_width="150dp" android:layout_height="50dp"
            android:text="SendMsg" android:onClick="sendMsg"/>

    <Button android:layout_width="150dp" android:layout_height="50dp"
            android:text="handlerThread" android:onClick="handlerThread"/>

    <Button android:layout_width="150dp" android:layout_height="50dp"
            android:text="AsyncTask" android:onClick="AsyncTask"/>

    <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="20dp"
            android:text="0"
    />

    <Button android:layout_width="150dp" android:layout_height="50dp"
            android:text="CancelAsyncTask" android:onClick="CancelAsyncTask"/>

</LinearLayout>